<% include ../partials/header %>
<link rel="stylesheet" type="text/css" href="/stylesheets/index.css">
<script>
    $('#home').addClass('active');
    $('#home-btn').addClass('btn-active');
</script>
    <div id="carouselExampleIndicators" class="carousel slide mb-4" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <!-- <li data-target="#carouselExampleIndicators" data-slide-to="2"></li> -->
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100 m-auto" src="https://images.unsplash.com/photo-1455763916899-e8b50eca9967?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80" alt="First slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h3 class="display-2 c-1-title"><strong>Camping gets you going</strong></h3>
                        <div>
                            <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new Campground</a>
                        </div>
                    </div>
                </div>
                <div class="carousel-item c-item-2">
                    <img class="d-block w-100" src="https://images.unsplash.com/photo-1476041800959-2f6bb412c8ce?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80" alt="Second slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h4 class="c-2-title">
                            "My wish is to stay <span class='coral-text'>always</span> like this, living quietly in a corner of <span class='coral-text'>nature</span> ."
                        </h4>
                        <h5 class="c-2-title float-right">-<span class='coral-text'>Claude</span> Monet</h5>
                    </div>
                </div>
                <!-- <div class="carousel-item ">
                <img class="d-block w-100" src="https://images.unsplash.com/photo-1525209149972-1d3faa797c3c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2850&q=80" alt="Third slide">
                </div> -->
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            </div>
                
            <div class="card-container d-flex flex-wrap justify-content-start"> <!--main container starts here-->
                
                    <% campgrounds.forEach((campground) => { %>
                        
                            <div class="card m-2 text-center">
                                <img class="card-img-top" src="<%= campground.image; %>">
                                <div class="card-body">
                                    <h4 class="card-title"><%= campground.name %></h4> 
                                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-secondary">More Info</a>
                                </div>
                            </div>
                        
                    <% }); %>
                
            </div> <!--main container ends here-->
<% include ../partials/footer %>