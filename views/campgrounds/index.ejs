<% include ../partials/header %>
    
    <div class="container"> <!--main container starts here-->
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to Yelp Camp...</h1>
                <p>View our hand-picked camping grounds from all over the world!</p>
                <div>
                    <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new Campground!</a>
                </div>
            </div>
        </header>
        
        <div class="row text-center" style="display: flex; flex-wrap: wrap">
            <% campgrounds.forEach((campground) => { %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= campground.image; %>">
                        <div class="caption">
                            <h4><%= campground.name %></h4>
                        </div>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </div>
                </div>
            <% }); %>
        </div>
    </div> <!--main container ends here-->
    
<% include ../partials/footer %>